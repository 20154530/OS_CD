<local:YT_Window x:Class="OS_CD.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:OS_CD"
                 mc:Ignorable="d"
                 Title="MainWindow"
                 MinWidth="320"
                 MinHeight="480"
                 Background="{DynamicResource MainWindow_BG}">
    <local:YT_Window.TitleArea>
        <Border x:Name="RootBorder"
                BorderThickness="0">
            <Grid Background="Transparent"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid x:Name="User_ID">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <local:YT_IconToggelButton x:Name="User_Icon"
                                               Style="{DynamicResource UserIconToggelButtonStyle}"
                                               ForeToolTip="选择用户"
                                               BackToolTip="选择用户"
                                               ForeIcon="&#xE13D;"
                                               BackIcon="&#xE125;" />
                    <TextBlock x:Name="UserName"
                               Grid.Column="1"
                               Text="{Binding Username}"
                               Style="{DynamicResource UsernameTextStyle}"/>
                </Grid>
                <Grid x:Name="Function_Area"
                      Grid.Column="1"
                      VerticalAlignment="Top"
                      MinWidth="320" 
                      Height="{DynamicResource MainWindow_TileBar_Height}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <local:YT_IconRadioButton x:Name="User_Btn"
                                              Style="{DynamicResource FunctionRadioButton}"
                                              LabelPadding="5,0,5,0"
                                              Content="用户" />
                    <local:YT_IconRadioButton x:Name="File_Btn"
                                              Grid.Column="1"
                                              Style="{DynamicResource FunctionRadioButton}"
                                              LabelPadding="5,0,5,0"
                                              Content="文件" />
                    <local:YT_IconRadioButton x:Name="Disk_Btn"
                                              Grid.Column="2"
                                              Style="{DynamicResource FunctionRadioButton}"
                                              LabelPadding="5,0,5,0"
                                              Content="磁盘" />
                    <local:YT_IconRadioButton x:Name="Mem_Btn"
                                              Grid.Column="3"
                                              Style="{DynamicResource FunctionRadioButton}"
                                              LabelPadding="5,0,5,0"
                                              Content="内存" />
                </Grid>
                <local:YT_IconButton x:Name="ExitBtn"
                                     Grid.Column="2"
                                     Content="&#xE106;"
                                     ForeToolTip="关闭"
                                     VerticalAlignment="Top"
                                     Command="{Binding CloseCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:YT_TitleBar}}"
                                     Style="{DynamicResource DefaultButtonStyle}"
                                     AllowAni="False"
                                     ToolTipVisiblity="Visible" />
            </Grid>
        </Border>
    </local:YT_Window.TitleArea>
    <Grid>

    </Grid>

</local:YT_Window>
