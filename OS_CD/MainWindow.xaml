<local:YT_Window x:Class="OS_CD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OS_CD"
        mc:Ignorable="d"
        Title="MainWindow" Background="{DynamicResource MainWindow_BG}">
    <local:YT_Window.TitleArea>
        <Grid Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid x:Name="User_ID">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="User_Icon" Style="{DynamicResource IconTextBlock}"/>
                <TextBlock x:Name="ID" Grid.Column="1"/>
            </Grid>
            <Grid x:Name="Function_Area" MinWidth="320" Grid.Column="1">
                
            </Grid>
            <Grid x:Name="SubFunction_Area" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1">
                
            </Grid>
            <local:YT_IconButton x:Name="ExitBtn" Grid.Column="2" IconVisiblity="Collapsed" ForeToolTip="关闭" ContentText="123" ContentTextVisiblity="Visible"
                                 Command="{Binding CloseCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:YT_TitleBar}}"
                                 Style="{DynamicResource DefaultButtonStyle}"
                                 AllowAni="False" ToolTipVisiblity="Visible"/>
        </Grid>
    </local:YT_Window.TitleArea>
    <Grid>

    </Grid>

</local:YT_Window>
