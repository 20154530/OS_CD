<Page x:Class="OS_CD.FunctionPages.DiskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OS_CD"
      mc:Ignorable="d"
      Title="DiskPage">
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="BlockLabel" FontSize="22" Text="" Style="{StaticResource IconTextBlock}" />
        <Viewbox x:Name="BlockArea" MinWidth="320" MaxWidth="640" Stretch="Uniform" Grid.Row="1" Margin="5,0,5,0">
             <ListView x:Name="DiskBlocks"
                  Style="{StaticResource DiskBlockView}"
                  ItemsSource="{Binding Blockcell}" />
        </Viewbox>
    </Grid>
</Page>
