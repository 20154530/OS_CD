<Page x:Class="OS_CD.FunctionPages.FilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OS_CD"
      mc:Ignorable="d"
      Title="FilePage">
    <Grid x:Name="RootGrid"
          Margin="8,0,8,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="TitleLabel"
                   FontSize="32"
                   HorizontalAlignment="Left"
                   Margin="0,4,0,4"
                   Style="{StaticResource DiskPageLabel}"
                   Text="文 件" />
        <Grid x:Name="ContentArea"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" MinWidth="240"/>
            </Grid.ColumnDefinitions>
            <Rectangle Style="{StaticResource H_Seperoator}"
                       Fill="{StaticResource DiskPage_FG}"
                       Grid.ColumnSpan="3"
                       VerticalAlignment="Top" />
            <Grid x:Name="GeneralFileView">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TreeView x:Name="FileTree"
                          ItemsSource="{Binding FileDictionary}"
                          Style="{StaticResource FileTreeView}" />
                <GridSplitter Grid.Row="1"
                              Style="{StaticResource DefaultSplitter_V}" />

                <Grid x:Name="FileProperty"
                      Grid.Row="1">
                    
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1" Style="{StaticResource DefaultSplitter_H}"/>
            <Grid x:Name="FileInfo">

            </Grid>
        </Grid>
    </Grid>
</Page>
